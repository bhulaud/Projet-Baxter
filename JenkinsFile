
    pipeline {
        triggers {
            cron('H 7 * * 1-6')
        }

        agent any
        
        stages {
            stage('Run Tests') {
                steps {
                    sh("""chmod +x test.sh;\
                          pwd;\
                          ls -l;\
                          ./test.sh}
END
                        """)
                     step([$class: "TapPublisher", testResults: "**/*.tap"])
                }
            }

        }
        options { timestamps () }
    }
